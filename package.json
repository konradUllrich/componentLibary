{
  "name": "@intrexx/mp-components",
  "version": "0.1.0",
  "description": "Reusable React component library built with Radix UI primitives and TanStack Form & Tables",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles/index.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "build:watch": "tsc --watch & vite build --watch",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-navigation-menu": "^1.2.5",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-form": "^0.37.0",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-table": "^8.21.3",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "typescript": "^5.8.0",
    "vite": "^5.4.0",
    "vitest": "^3.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/intrexx/mp-components.git"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "radix-ui",
    "tanstack"
  ],
  "author": "Intrexx",
  "license": "MIT"
}
