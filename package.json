{
  "name": "@konradullrich/mp-components",
  "version": "0.1.0",
  "description": "Reusable React component library built with Radix UI primitives and TanStack Form & Tables",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles/index.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "build:watch": "tsc --watch & vite build --watch",
    "demo": "vite --config vite.config.demo.ts",
    "demo:build": "vite build --config vite.config.demo.ts",
    "demo:preview": "vite preview --config vite.config.demo.ts",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:ct": "playwright test -c playwright-ct.config.ts",
    "test:ct:headed": "playwright test -c playwright-ct.config.ts --headed",
    "test:ct:ui": "playwright test -c playwright-ct.config.ts --ui",
    "test:ct:debug": "playwright test -c playwright-ct.config.ts --debug",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.5",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-form": "^0.37.0",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-table": "^8.21.3",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@eslint/js": "^9.21.0",
    "@playwright/experimental-ct-react": "^1.58.2",
    "@playwright/test": "^1.58.2",
    "@tanstack/react-router": "^1.158.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "axe-core": "^4.11.1",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^17.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.55.0",
    "vite": "^5.4.0",
    "vitest": "^3.1.4",
    "zustand": "^5.0.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/konradUllrich/componentLibary.git"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "radix-ui",
    "tanstack"
  ],
  "author": "Konrad Ullrich",
  "license": "MIT"
}
